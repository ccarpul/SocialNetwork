<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundCardView"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/profilePhotoInstagram"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="4dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="TODO"
            tool:srcCompat="@drawable/ic_profile_default" />


        <TextView
            android:id="@+id/userInstagram"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:padding="4dp"
            android:textStyle="bold"
            tool:text="User Instagram" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageInstagram"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/profilePhotoInstagram"
        tool:srcCompat="@tools:sample/backgrounds/scenic" />

    <!--
    <VideoView
        android:id="@+id/videoViewIg"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:visibility="gone"
        tool:srcCompat="@tools:sample/avatars" />
     -->

    <TextView
        android:id="@+id/textImageInstagram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/imageInstagram"
        tool:layout_editor_absoluteX="-6dp"
        tool:text="Description" />


</androidx.appcompat.widget.LinearLayoutCompat>